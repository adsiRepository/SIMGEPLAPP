<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Modelo.MenuActivity"
    android:background="#ff020800">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/fondo_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/menuss"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Usuarios"
        android:id="@+id/btn_usuarios"
        android:background="#ff21cd14"
        android:layout_above="@+id/btn_revision"
        android:layout_alignLeft="@+id/btn_revision"
        android:layout_marginBottom="25dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Revision"
        android:id="@+id/btn_revision"
        android:background="#ff21cd14"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/switch_monitorear"
        android:layout_alignLeft="@+id/btn_monitoreo" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Monitoreo"
        android:id="@+id/btn_monitoreo"
        android:background="#ff21cd14"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/txv_user_session"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sincronizar"
        android:id="@+id/switch_monitorear"
        android:layout_alignBottom="@+id/fondo_menu"
        android:layout_alignParentRight="true"
        android:checked="false"
        android:textColor="#ffffffff"
        android:textSize="21dp"
        android:shadowColor="#ffa7a7a7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txv_user_session"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="#ffffffff"/>

</RelativeLayout>
