<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:background="@drawable/back_login_port">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edt_user"
        android:editable="false"
        android:background="@android:color/white"
        android:textColor="#ff0e060e"
        android:layout_above="@+id/textView_pass"
        android:layout_alignLeft="@+id/edt_contrasena"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edt_contrasena"
        android:background="@android:color/white"
        android:textColor="#ff0e060e"
        android:layout_below="@+id/textView_pass"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_loggin"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_loggin_ingresar"
        android:clickable="false"
        android:baselineAlignBottom="false"
        android:focusable="false"
        android:cropToPadding="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:visibility="visible"
        android:layout_below="@+id/edt_contrasena"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_solic_reg"
        android:background="@drawable/btn_loggin_registrar"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Usuario"
        android:id="@+id/textView_user"
        android:background="#06ffffff"
        android:textColor="#fffbfffb"
        android:layout_above="@+id/edt_user"
        android:layout_alignLeft="@+id/edt_user"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/textView_pass"
        android:background="#06ffffff"
        android:textColor="#fffbfffb"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/edt_user"/>

</RelativeLayout>
