<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:background="#ff010201">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fondo"
        android:background="@drawable/inter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edt_user"
        android:editable="false"
        android:background="@android:color/white"
        android:textColor="#ff0e060e"
        android:layout_below="@+id/textView_pass"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edt_pass"
        android:background="@android:color/white"
        android:textColor="#ff0e060e"
        android:layout_below="@+id/textView_user"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_loggin"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ingr"
        android:clickable="false"
        android:baselineAlignBottom="false"
        android:focusable="false"
        android:cropToPadding="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:visibility="visible"
        android:layout_above="@+id/btn_solic_reg"
        android:layout_toRightOf="@+id/btn_solic_reg"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_solic_reg"
        android:background="@drawable/registrar"
        android:onClick="interfaz4"
        android:clickable="true"
        android:layout_alignBottom="@+id/fondo"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Usuario"
        android:id="@+id/textView_user"
        android:background="#06ffffff"
        android:textColor="#fffbfffb"
        android:layout_marginTop="122dp"
        android:layout_alignTop="@+id/fondo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/textView_pass"
        android:background="#06ffffff"
        android:textColor="#fffbfffb"
        android:layout_below="@+id/edt_pass"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
