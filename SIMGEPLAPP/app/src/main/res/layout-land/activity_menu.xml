<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
                tools:context=".Modelo.MenuActivity"
    android:background="#ff020800">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/fondo_menu"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txv_user_session"
        android:background="@drawable/meutt" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Usuarios"
        android:id="@+id/btn_usuarios"
        android:background="#ff21cd14"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn_monitoreo" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Revision"
        android:id="@+id/btn_revision"
        android:background="#ff21cd14"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/btn_usuarios"
        android:layout_alignLeft="@+id/btn_usuarios" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Monitoreo"
        android:id="@+id/btn_monitoreo"
        android:background="#ff21cd14"
        android:layout_marginRight="75dp"
        android:layout_below="@+id/txv_user_session"
        android:layout_toLeftOf="@+id/switch_monitorear"
        android:layout_marginTop="41dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sincronizar"
        android:id="@+id/switch_monitorear"
        android:checked="false"
        android:textColor="#ffffffff"
        android:textSize="21dp"
        android:shadowColor="#ffa7a7a7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txv_user_session"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="#ffffffff"/>

</RelativeLayout>
