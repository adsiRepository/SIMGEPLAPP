<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Modelo.MenuActivity"
    android:background="#ff020800">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/fondo_menu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/menu6"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/linearLayout"
        android:layout_marginLeft="24dp">

    </LinearLayout>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitorear"
        android:id="@+id/switch_monitorear"
        android:checked="false"
        android:textColor="#ffffffff"
        android:textSize="21dp"
        android:shadowColor="#ffa7a7a7"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txv_user_session"
        android:textColor="#ffffffff"
        android:layout_above="@+id/linearLayout"
        android:layout_alignRight="@+id/fondo_menu"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Monitoreo"
        android:id="@+id/btn_monitoreo"
        android:background="#ff21cd14"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="26dp"
        android:layout_alignRight="@+id/btn_usuarios"
        android:layout_alignLeft="@+id/btn_usuarios" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Usuarios"
        android:id="@+id/btn_usuarios"
        android:background="#ff21cd14"
        android:layout_above="@+id/txv_user_session"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Revision"
        android:id="@+id/btn_revision"
        android:background="#ff21cd14"
        android:layout_alignBottom="@+id/txv_user_session"
        android:layout_alignLeft="@+id/btn_usuarios"
        android:layout_alignRight="@+id/btn_usuarios" />

</RelativeLayout>
