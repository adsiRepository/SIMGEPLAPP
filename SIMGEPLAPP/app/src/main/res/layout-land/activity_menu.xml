<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Modelo.MenuActivity"
    android:background="#ff020800">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fondo_menu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/meutt"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/linearLayout"
        android:layout_marginLeft="24dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Usuarios"
            android:id="@+id/btn_usuarios"
            android:background="#ff21cd14"
            android:layout_above="@+id/btn_revision"
            android:layout_alignLeft="@+id/btn_revision"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Revision"
            android:id="@+id/btn_revision"
            android:background="#ff21cd14"
            android:layout_above="@+id/switch_monitorear"
            android:layout_alignLeft="@+id/btn_monitoreo"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Monitoreo"
            android:id="@+id/btn_monitoreo"
            android:background="#ff21cd14"
            android:layout_below="@+id/txv_user_session"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitorear"
        android:id="@+id/switch_monitorear"
        android:checked="false"
        android:textColor="#ffffffff"
        android:textSize="21dp"
        android:shadowColor="#ffa7a7a7"
        android:layout_alignBottom="@+id/fondo_menu"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txv_user_session"
        android:textColor="#ffffffff"
        android:layout_above="@+id/linearLayout"
        android:layout_alignRight="@+id/fondo_menu"
        />

</RelativeLayout>
