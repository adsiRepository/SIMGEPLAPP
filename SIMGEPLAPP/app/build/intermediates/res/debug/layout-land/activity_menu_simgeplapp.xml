<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.adsi38_sena.simgeplapp.Modelo.MenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bienvenido a Simgeplapp"
        android:id="@+id/lbl_msg_bienvenida"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Usuario"
        android:id="@+id/lbl_user"
        android:layout_below="@+id/lbl_msg_bienvenida"
        android:layout_toRightOf="@+id/lbl_msg_bienvenida"
        android:layout_marginLeft="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Session:"
        android:id="@+id/lbl_session"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/lbl_msg_bienvenida" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/lbl_session_state"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/lbl_session" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitoreo"
        android:id="@+id/btn_monitoreo"
        android:layout_above="@+id/lbl_session_state"
        android:layout_alignRight="@+id/lbl_user"
        android:layout_marginRight="41dp"
        android:layout_marginBottom="36dp" />
</RelativeLayout>
